<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title> THT Laptop Store </title>
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <link rel="preconnect" href="https://fonts.gstatic.com">
    <link href="https://fonts.googleapis.com/css2?family=Roboto&display=swap" rel="stylesheet">
    <link href="~/fonts/css/fontawesome.min.css" rel="stylesheet" />
    <link href="~/fonts/css/brands.min.css" rel="stylesheet" />
    <link href="~/fonts/css/solid.min.css" rel="stylesheet" />
    <link href="~/Public/css/style.css" rel="stylesheet" />
    <link href="~/Public/css/productDetail.css" rel="stylesheet" />
</head>

<body>
    <header>
        <nav class="navbar navbar-light bg-white p-0">
            <div class="container">
                <a class="navbar-brand p-0" href="@Url.Action("Index","Home")">
                    <img src="~/images/logo/logotht.PNG" alt="" style="width:120px; height:60px" />
                </a>
                <div class="nav-item d-inline-flex">
                    <marquee width="700px"><b>SĐT: 0123456789 - Cam kết chính hãng</b></marquee>
                </div>
                <div class="d-flex">
                    @if (Session["userID"] != null)
                    {
                        <div class="dropdown">
                            <div class="btn dropdown-toggle text-dark p-0" id="dropdownMenuButton1"
                               data-bs-toggle="dropdown"
                               aria-expanded="false"
                               style="text-decoration:none">
                                <img class="border border-2 border-dark rounded-circle" src="~/images/user/employee/JoeyTribbiani.jpg" alt="" width="48" height="48" />
                                <b>@Session["fullName"]</b>
                            </div>
                            <ul class="dropdown-menu" aria-labelledby="dropdownMenuButton1">
                                <li><a class="dropdown-item" href="@Url.Action("","Account")">Thông tin tài khoản</a></li>
                                <li><a class="dropdown-item" href="">Đăng xuất</a></li>
                            </ul>
                        </div>
                    }
                    else
                    {
                        <a class="nav-link px-1 pt-1  text-dark" href="@Url.Action("SignUp","Account")">Đăng ký</a>
                        <a class="nav-link px-2 pt-1 text-dark" href="@Url.Action("Login","Account")">Đăng nhập</a>
                    }
                    <a class="nav-link p-0 text-dark mx-2" href="#">
                        <i class="fas fa-shopping-cart fa-2x pt-1"></i>
                        <b>(0)</b>
                    </a>
                </div>
            </div>
        </nav>
        <nav class="navbar navbar-expand-lg navbar-dark bg-dark" style="background-color: #363636">
            <div class="container px-0">
                <button class="navbar-toggler border-white border-5" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarSupportedContent">
                    <ul class="navbar-nav">
                        <li class="nav-item">
                            <a class="nav-link active" style="color:white" href="@Url.Action("Index","Home")"><b>TRANG CHỦ</b></a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" style="color: #F8F8FF; margin-left: 20px" href="@Url.Action("ProductPage","Product")"><b>SẢN PHẨM</b></a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" style="color: #F8F8FF; margin-left: 20px" href="#"><b>LINH KIỆN</b></a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" style="color: #F8F8FF; margin-left: 20px" href="#"><b>PHỤ KIỆN</b></a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" style="color: #F8F8FF; margin-left: 20px" href="#"><b>KHUYẾN MÃI</b></a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" style="color: #F8F8FF; margin-left: 20px" href="#"><b>TIN TỨC</b></a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" style="color: #F8F8FF; margin: 0px 20px" href="#"><b>LIÊN HỆ</b></a>
                        </li>
                        <li>
                            <form class="d-flex">
                                <input class="form-control me-2" type="search" placeholder="Tìm kiếm" aria-label="Search" style="width: 270px">
                                <button class="btn btn-light text-dark" type="submit">
                                    <i class="fa fa-search"></i>
                                </button>
                            </form>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header><!--END HEADER-->

    <section id="main_content">
        @RenderBody()
    </section><!--end main_content-->

    <footer>
        <div class="container-fluid" style="background-color: #E8E8E8">
            <img src="~/images/bia/bia5.PNG" style="width:100%; height:100%" />
            <div class="row">
                <div class="col-3">
                    <img src="~/images/logo/logotht.png" style="height:150px; width:350px;" />
                </div>
                <div class="col-md-3 pt-3">
                    <a class="nav-link active" style="color:black" href="#"><b>CỬA HÀNG</b></a>
                </div>
                <div class="col-md-3 pt-3">
                    <a class="nav-link active" style="color:black" href="#"><b>CHÍNH SÁCH</b></a>
                    <a class="nav-link active" style="color:dimgray" href="#">Về chúng tôi</a>
                    <a class="nav-link active" style="color:dimgray" href="#">Chính sách quy định chung</a>
                    <a class="nav-link active" style="color:dimgray" href="#">Điều kiện bảo hành</a>
                    <a class="nav-link active" style="color:dimgray" href="#">Chính sách bảo hành</a>
                </div>
                <div class="col-md-3 pt-3">
                    <a class="nav-link active" style="color:black" href="#"><b>HỖ TRỢ</b></a>
                    <a class="nav-link active" style="color:dimgray" href="#">Tổng đài tư vấn: 0989969919</a>
                    <a class="nav-link active" style="color:dimgray" href="#">Tư vấn mua hàng: 0123456789</a>
                    <a class="nav-link active" style="color:dimgray" href="#">Hỗ trợ kỹ thuật: 0163686839</a>
                    <a class="nav-link active" style="color:dimgray" href="#">Phản hồi, góp ý: 0386969056</a>
                </div>

            </div>
            <div class="pt-3">
                <center><b>&copy; @DateTime.Now.Year - by THT Store</b></center><br />
            </div>
        </div>
    </footer>

    <script src="~/Scripts/popper.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
</body>
</html>

@model WebApplication1.Models.Data.Brand

@{
    ViewBag.Title = "editBrand";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}
<div class="container">
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-horizontal">
            <h4>Cập nhật thương hiệu</h4>
            <hr />
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            @Html.HiddenFor(model => model.brandID)

            <div class="form-group">
                Tên thương hiệu
                <div class="col-md-10">
                    <input class="form-control" type="text" name="brandName" value="@Model.brandName" required maxlength="50" />
                    @Html.ValidationMessageFor(model => model.brandName, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Cập nhật" class="btn btn-primary" />
                </div>
            </div>
        </div>
    }

    <div>
        @Html.ActionLink("Quay lại danh sách", "listBrands")
    </div>
</div>



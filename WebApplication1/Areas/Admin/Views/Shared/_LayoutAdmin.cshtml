<!DOCTYPE html>
<html>
<head>
    <title>@Page.Title</title>
    @RenderSection("head", required: false)
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <link href="~/fonts/css/fontawesome.min.css" rel="stylesheet" />
    <link href="~/fonts/css/brands.min.css" rel="stylesheet" />
    <link href="~/fonts/css/solid.min.css" rel="stylesheet" />
    <link href="~/Public/css/Admin/LayoutAdmin.css" rel="stylesheet" />
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-light bg-light">
        <div class="container">
            <a class="navbar-brand" href="@Url.Action("Index", "Product")">Admin</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarSupportedContent">
                <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle active" href="#" id="navbarDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                            Sản phẩm
                        </a>
                        <ul class="dropdown-menu" aria-labelledby="navbarDropdown">
                            <li><a class="dropdown-item" href="@Url.Action("Index", "Product")">Tất cả sản phẩm</a></li>
                            <li><a class="dropdown-item" href="@Url.Action("listCategories", "Category")">Loại sản phẩm</a></li>
                            <li><a class="dropdown-item" href="@Url.Action("listBrands", "Brand")">Thương hiệu</a></li>
                        </ul>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link active" aria-current="page" href="@Url.Action("Employee", "Employee")">Nhân viên</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link active" aria-current="page" href="@Url.Action("listContact", "Contact")">Liên hệ</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link active" aria-current="page" href="@Url.Action("listDiscount", "Discount")">Khuyến mãi</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link active" aria-current="page" href="@Url.Action("Order", "Order")">Đơn hàng</a>
                    </li>
                </ul>
            </div>
            <ul class="nav justify-content-end">
                <li class="dropdown">
                    <a class="dropdown-toggle text-dark" id="dropdownMenuButton1"
                       data-bs-toggle="dropdown"
                       aria-expanded="false"
                       style="text-decoration:none">
                        <b>@Session["fullname"]</b>
                        <img class="border border-2 border-dark rounded-3" src="~/images/user/employee/@Session["image"]" alt="" width="48" height="48" />
                    </a>
                    <ul class="dropdown-menu" aria-labelledby="dropdownMenuButton1">
                        <li><a class="dropdown-item" href="@Url.Action("Logout","Account")">Đăng xuất</a></li>
                        <li><a class="dropdown-item" href="@Url.Action("","Account")">Thông tin tài khoản</a></li>
                    </ul>
                </li>
            </ul>
        </div>
    </nav>
    <section id="main_content">
        @RenderBody()
    </section>
    <footer>
        <center><b>&copy; @DateTime.Now.Year - by THT Store</b></center>
    </footer>
    @RenderSection("scripts", required: false)
    <script src="~/Scripts/popper.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
    <script src="~/Public/js/Admin/LayoutAdmin.js"></script>
</body>
</html>

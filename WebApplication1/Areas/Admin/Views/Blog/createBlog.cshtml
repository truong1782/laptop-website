@using WebApplication1.Models.Data
@model Blog

@{
    ViewBag.Title = "createBlog";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}
<script src="~/Services/ckeditor/ckeditor.js"></script>
<div class="container">
    <h2 class="my-3">Tạo mới bài viết</h2>
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-horizontal">
            <hr />
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <div class="form-group">
                @Html.LabelFor(model => model.Title, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-12">
                    @Html.EditorFor(model => model.Title, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.Title, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.Content, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-12">
                    <textarea class="form-control" name="Content" id="Content" rows="7" required></textarea>
                    <script>CKEDITOR.replace("Content");</script>
                    @Html.ValidationMessageFor(model => model.Content, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.IDTopic, "IDTopic", htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-12">
                    <select class="form-select" name="IDTopic" id="IDTopic" required>
                        @foreach (var item in (List<Topic>)ViewBag.IDTopic)
                        {
                            <option value="@item.IDTopic">@item.NameTopic</option>
                        }
                    </select>
                    @Html.ValidationMessageFor(model => model.IDTopic, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-offset-2 col-md-12">
                    <input type="submit" value="Create" class="btn btn-default" />
                </div>
            </div>
        </div>
    }

    <div>
        @Html.ActionLink("Back to List", "BlogList")
    </div>

</div>
